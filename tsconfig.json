{
    "compilerOptions": {
      "target": "ES6", // ou "ES2015"
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "rootDir": "./src",
    },
    "include": [
      "./**/*.ts",
      "./*.ts"
    ],
    "exclude": [
      "dist",
      "node_modules",
      "**/*.spec.ts",
      "./**/test/*.ts",
    ]
}
   